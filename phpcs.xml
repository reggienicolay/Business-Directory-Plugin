<?xml version="1.0"?>
<ruleset name="Business Directory Plugin">
    <description>Custom ruleset for Business Directory Plugin</description>
    
    <!-- Use WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Exclude database warnings (false positives) -->
        <exclude name="WordPress.DB.PreparedSQL.InterpolatedNotPrepared"/>
        <exclude name="WordPress.DB.PreparedSQL.NotPrepared"/>
        
        <!-- Exclude documentation requirements -->
        <exclude name="Squiz.Commenting"/>
        
        <!-- Exclude security for now (will fix incrementally) -->
        <exclude name="WordPress.Security.ValidatedSanitizedInput"/>
        <exclude name="WordPress.Security.NonceVerification"/>
        <exclude name="WordPress.Security.EscapeOutput"/>
        
        <!-- Exclude Yoda conditions (style preference) -->
        <exclude name="WordPress.PHP.YodaConditions"/>
        
        <!-- Exclude short ternaries (minor style issue) -->
        <exclude name="Universal.Operators.DisallowShortTernary"/>
        
        <!-- Exclude date/time function warnings -->
        <exclude name="WordPress.DateTime.RestrictedFunctions"/>
        
        <!-- Allow assignment in conditions -->
        <exclude name="Generic.CodeAnalysis.AssignmentInCondition"/>
        
        <!-- Exclude filename requirements (using PSR-4 autoloading) -->
        <exclude name="WordPress.Files.FileName"/>
    </rule>
    
    <file>.</file>
    
    <!-- Exclude patterns -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    
    <!-- Exclude files with unavoidable errors -->
    <exclude-pattern>includes/database-indexes.php</exclude-pattern>
    <exclude-pattern>uninstall.php</exclude-pattern>
</ruleset>
